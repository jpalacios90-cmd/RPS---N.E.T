import random

name = input("player name: ")

entrie={
        1:"Rock",
        2: "Paper",
        3:"Scisors"}

def player_info():
    while True:
        # Ask for confirmation
        confirm = input(f"Are you sure this is your name: '{name}'? (y/n): ").lower()
        if confirm in ("y", "yes"):
            break
        elif confirm in ("n", "no"):
            print("Okay, let's try again.")
        else:
            print("Please answer 'y' or 'n'.")

def computer_choice():    

    computer=entrie[random.randint(1,3)]
    return computer


def player_choice():
    choice=input("""Rock,Paper, Scisors
    1)Rock
    2)Paper
    3)Scisors
    """)
    return choice


def game_result(computer,choice,entries):

    if choice=="1" or choice== "rock":
        if computer==entries[2]:
            print("You lose")
        elif computer== entries[3]:
            print("You win")
        else:
            print("Draw")

    elif choice=="2" or choice== "paper":
        if computer==entries[3]:
            print("You lose")
        elif computer== entries[1]:
            print("You win")
        else:
            print("Draw")

    elif choice=="3" or choice== "scisor":
        if computer==entries[1]:
            print("You lose")
        elif computer== entries[2]:
            print("You win")
        else:
            print("Draw")

def score():
    var1 = game_result
    
    return {"name": name, "win": 0, "lose": 0}

def main():
    player=player_choice()
    computer=computer_choice()
    print("computer choice is",computer)
    game_result(computer,player,entrie)
    score()
    player = player_info()
    print(f"Player info: {player}")


main()
